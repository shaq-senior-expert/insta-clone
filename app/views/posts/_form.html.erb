<% if @post.errors.any? %>
<h5 class="error"><%= @post.errors.full_messages.to_sentence %></h5>
<% end %>
<!-- Using form with and url to past custom url so that the request can be routed to appropriate route -->
<!-- Use multipart so that we can upload photos -->
<%= form_with model: post, url: url, local: true, html: { multipart: true } do |f| %>
<div class="form-group">
   <%= f.label :image %>
   <% #= f.file_field :image, class: "form-control" %>
   <% #= f.hidden_field :image_cache %>
   <%= f.hidden_field :image, class: "simple-file-upload" %>
</div>
<div class="form-group"> 
   <%= f.label :description %>
   <%= f.text_area :description, class: "form-control" %>
   <%= f.submit "Save Post", class: "btn btn-info" %>
</div>
<% end %>

