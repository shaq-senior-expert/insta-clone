  <title>igram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://app.simplefileupload.com/buckets/6f8223c905ab0f7e85901be54111f5b9.js"></script>

    <%= stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
    <%= javascript_pack_tag "application", 'data-turbolinks-track': "reload" %>

</head>

<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-light bg-white static-top">
    <div class="container" >
      <a class="navbar-brand" href= <%= user_signed_in? ? posts_path : root_path %>>
          <%= image_tag("logo.png", class: "logo", alt: "logo", size: "85x40") %>
      </a>
      <%# <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button> %>
     
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
              <%= render "layouts/account_nav" %>
          <% else %>
              <%= render "layouts/public_nav" %>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Page Content -->
  <div class="container" id="login-div">
    <div class="row">
      <div class="col-lg-12" >
            <%= yield %>
      </div>
    </div>
    
  </div>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

    
</body>
</html>


